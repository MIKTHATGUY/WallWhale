# =====================================
# WallWhale Server Configuration
# =====================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Application Metadata
APP_NAME=WallWhale Server
APP_VERSION=1.0.0
APP_DESCRIPTION=Enterprise-grade DepotDownloader management API

# Admin Bootstrap Configuration
ADMIN_EMAIL=admin@company.com
ADMIN_PASSWORD=SecurePassword123!

# Storage Configuration
SAVE_ROOT=./downloads
REQUIRE_SUBPATH=projects\\myprojects

# DepotDownloader Configuration
DEPOTDOWNLOADER_PATH=DepotDownloaderMod/DepotDownloaderMod.exe

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_KEY_SALT=your-api-key-salt-change-in-production
BCRYPT_ROUNDS=12

# Network Security
IP_ALLOW_LIST=
IP_DENY_LIST=
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# TLS Configuration
TLS_ENABLE=false
TLS_KEY_PATH=certs/key.pem
TLS_CERT_PATH=certs/cert.pem

# Database Configuration
DATABASE_URL=file:./prisma/dev.db

# Concurrency & Performance
GLOBAL_CONCURRENCY=2
PER_KEY_CONCURRENCY=1
MAX_UPLOAD_SIZE=100MB
REQUEST_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# Monitoring & Observability
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
LOG_LEVEL=info
LOG_FORMAT=pretty

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@company.com

# Notification Webhooks
WEBHOOK_SUCCESS_URL=
WEBHOOK_FAILURE_URL=
WEBHOOK_SECRET=

# File Retention Policy
CLEANUP_INTERVAL=86400000
MAX_FILE_AGE=604800000
AUTO_CLEANUP_ENABLED=true

# API Documentation
DOCS_ENABLED=true
DOCS_PATH=/docs
DOCS_TITLE=WallWhale Server API
DOCS_DESCRIPTION=Enterprise API for managing Steam Workshop downloads

